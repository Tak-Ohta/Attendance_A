<% provide(:title, "勤怠変更申請") %>

<h2 class="center">勤怠勤怠変更申請</h2>

<div>
  <%= form_with(model: @user, url: attendances_update_attendances_change_application_user_path(date: @first_day), local: true, method: :patch) do |f| %>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認 &#12958;</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[day.worked_on.wday] %></td>
              <td><%= attendance.time_field :re_change_started_at, class: "form-control" %></td>
              <td><%= attendance.time_field :re_change_finished_at, class: "form-control" %></td>
              <td><%= attendance.check_box :next_day_for_attendance_change, {}, checked_value = "true",unchecked_value = "false" %></td>
              <td></td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= attendance.collection_select :select_superior_for_attendance_change, @superiors, :name, :name, {include_blank: true}, {class: "form-control"} %></td>
            </tr>
          <% end %>    
        <% end %>
      </tbody>
    </table>
    <div class="center">
      <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-primary" %>
      <%= f.submit "編集を保存する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>