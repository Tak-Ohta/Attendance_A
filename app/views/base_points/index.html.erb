<% provide(:title, "拠点一覧") %>
<h2>拠点一覧</h2>

<div class="row">
  <div>
    <%= link_to "拠点情報追加", new_base_point_path, class: "btn btn-primary" %>
  </div>
  <table class="table table-bordered table-condensed table-hover" id="table-base-point">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>拠点番号</th>
        <th>拠点名</th>
        <th>勤怠種類</th>
      </tr>
    </thead>
    <tdody>
      <% @base_points.each do |base| %>
      <tr>
        <td><%= link_to "修正", edit_base_point_path(base), class: "btn btn-primary btn-sm" %></td>
        <td>
          <%= link_to "削除", base_point_path(base),
            data: {confirm: "#{base.base_name}の情報を削除してよろしいですか？"},
            method: :delete, class: "btn btn-primary btn-sm" %>
        </td>
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.attendance_type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
